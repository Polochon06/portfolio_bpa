---
import '../styles/global.scss'
import logo from '../assets/logo.png'
---

<html lang="fr" class="theme-contrasted">
  <head>
    <meta charset="utf-8" />
    <title>MT-CONGÉS | Paul Blanc</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/icons/favicon-48x48.png" />
    <link
      rel="preload"
      href="/fonts/PPEditorialNew-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/PPFraktionMono-Regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/Bigger-Display.woff2"
      as="font"
      type="font/woff2"
      crossorigin="anonymous"
    />
    <style lang="scss">
      @font-face {
        font-family: 'Bigger Display';
        src: url('/fonts/Bigger-Display.woff2') format('woff2');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }

      @font-face {
        font-family: 'PP Fraktion Mono';
        src: url('/fonts/PPFraktionMono-Regular.woff2') format('woff2');
        font-weight: normal;
        font-style: normal;
        font-display: swap;
      }
      body {
        margin: 0;
        background-color: #050505;
        color: #e0e0e0;
        font-family: 'PP Fraktion Mono', monospace;
        overflow-x: hidden;
      }

      #bg-3d {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
        opacity: 0.6;
      }

      .ambient-light {
        position: fixed;
        top: 50%;
        left: 50%;
        width: 80vw;
        height: 80vw;
        background: radial-gradient(
          circle,
          rgba(138, 43, 226, 0.15) 0%,
          rgba(0, 0, 0, 0) 70%
        );
        transform: translate(-50%, -50%);
        pointer-events: none;
        z-index: -1;
        filter: blur(50px);
      }

      .container {
        max-width: 1400px;
        margin: 0 auto;
        padding: 0 2rem;
      }

      header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 2rem;
        display: flex;
        justify-content: space-between;
        align-items: center;
        z-index: 100;
        mix-blend-mode: exclusion;

        a {
          text-decoration: none;
          color: white;
          font-weight: bold;
          text-transform: uppercase;
          letter-spacing: 0.05em;
          font-size: 0.9rem;
        }
      }

      .hero {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        position: relative;
        text-align: center;
        padding-top: 4rem;

        h1 {
          font-family: 'Bigger Display', sans-serif;
          font-size: clamp(4rem, 18vw, 15rem);
          line-height: 0.8;
          margin: 0;
          text-transform: uppercase;
          color: #fff;
          text-shadow: 0 0 30px rgba(138, 43, 226, 0.3);

          opacity: 0;
          transform: translateY(50px);
          animation: heroReveal 1.2s cubic-bezier(0.16, 1, 0.3, 1) forwards;
        }

        .tags {
          display: flex;
          gap: 1rem;
          margin-bottom: 2rem;
          opacity: 0;
          animation: fadeUp 1s ease-out forwards 0.5s;

          span {
            border: 1px solid rgba(255, 255, 255, 0.3);
            padding: 0.5rem 1rem;
            border-radius: 100px;
            font-size: 0.8rem;
            text-transform: uppercase;
            letter-spacing: 0.1em;
          }
        }

        .subtitle {
          font-size: clamp(1rem, 2vw, 1.5rem);
          margin-top: 3rem;
          color: #ccc;
          max-width: 600px;
          font-family: 'Helvetica', sans-serif; /* Contrast font */
          font-weight: 300;
          opacity: 0;
          transform: translateY(20px);
          animation: fadeUp 1s ease-out forwards 0.8s;
        }
      }

      .showcase {
        position: relative;
        margin: -10vh auto 5rem;
        width: 100%;
        max-width: 1200px;
        perspective: 1000px;

        &__img {
          width: 100%;
          height: auto;
          border-radius: 12px;
          border: 1px solid rgba(255, 255, 255, 0.1);
          box-shadow: 0 20px 80px rgba(0, 0, 0, 0.5);
          transform: rotateX(5deg);
          transition: transform 0.5s ease;

          &:hover {
            transform: rotateX(0deg);
          }
        }
      }

      .section {
        padding: 10rem 0;

        h2 {
          font-family: 'Bigger Display', sans-serif;
          font-size: clamp(3rem, 8vw, 6rem);
          margin-bottom: 4rem;
          color: #fff;
          text-transform: uppercase;
          line-height: 0.9;
        }
      }

      .grid-cols-2 {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 4rem;

        @media (max-width: 768px) {
          grid-template-columns: 1fr;
        }

        p {
          font-size: 1.1rem;
          line-height: 1.6;
          color: #bbb;
          margin-bottom: 2rem;
        }
      }

      .feature-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 2rem;

        .card {
          background: rgba(20, 20, 20, 0.6);
          backdrop-filter: blur(10px);
          border: 1px solid rgba(255, 255, 255, 0.1);
          padding: 2.5rem;
          border-radius: 16px;
          transition: all 0.3s ease;

          &:hover {
            background: rgba(40, 40, 40, 0.6);
            border-color: rgba(138, 43, 226, 0.5);
            transform: translateY(-5px);
          }

          h3 {
            font-size: 1.2rem;
            margin-top: 0;
            margin-bottom: 1rem;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 0.05em;
          }

          p {
            font-size: 0.95rem;
            color: #888;
            line-height: 1.6;
          }
        }
      }

      .tech-stack {
        display: flex;
        flex-wrap: wrap;
        gap: 1rem;

        span {
          background: rgba(255, 255, 255, 0.05);
          padding: 0.8rem 1.5rem;
          border: 1px solid rgba(255, 255, 255, 0.1);
          border-radius: 4px;
          font-size: 0.9rem;
          color: #ccc;
          text-transform: uppercase;
          transition: all 0.3s ease;

          &:hover {
            background: #fff;
            color: #000;
          }
        }
      }

      .dual-images {
        display: flex;
        gap: 2rem;
        margin: 5rem 0;
        align-items: center;

        @media (max-width: 768px) {
          flex-direction: column;
        }

        img {
          width: 50%;
          height: auto;
          border-radius: 8px;
          border: 1px solid rgba(255, 255, 255, 0.1);

          @media (max-width: 768px) {
            width: 100%;
          }
        }
      }

      .cta-footer {
        text-align: center;
        padding: 8rem 0;

        a.main-btn {
          display: inline-block;
          font-size: 2rem;
          color: #fff;
          text-decoration: none;
          padding-bottom: 5px;
          border-bottom: 2px solid rgba(255, 255, 255, 0.3);
          transition: all 0.3s ease;
          font-family: 'Bigger Display', sans-serif;
          text-transform: uppercase;

          &:hover {
            border-color: #fff;
            text-shadow: 0 0 20px rgba(138, 43, 226, 0.5);
          }
        }
      }

      footer {
        padding: 2rem;
        text-align: center;
        color: #444;
        font-size: 0.8rem;
        text-transform: uppercase;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
      }

      @keyframes heroReveal {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }

      @keyframes fadeUp {
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
    </style>
  </head>
  <canvas id="bg-3d"></canvas>
  <div class="ambient-light"></div>

  <header>
    <a href="/portfolio_bpa/">Paul Blanc ©24</a>
    <a href="https://github.com/Paul-B-06/mt-conges" target="_blank">
      GitHub Repository ↗
    </a>
  </header>

  <main>
    <div class="container">
      <section class="hero">
        <div class="tags">
          <span>2024</span>
          <span>Java Architecture</span>
          <span>School Project</span>
        </div>
        <h1>MT-Congés</h1>
        <div class="subtitle">
          Une plateforme moderne de gestion RH.<br />Architecture stricte.
          Sécurité maximale.
        </div>
      </section>

      <div class="showcase">
        <img
          src="/portfolio_bpa/images/works/mt-conges-dashboard.png"
          alt="Dashboard"
          class="showcase__img"
        />
      </div>

      <section class="section">
        <div class="grid-cols-2">
          <div>
            <h2>Le Projet</h2>
          </div>
          <div>
            <p>
              <b>MT-CONGÉS</b> redéfinit la gestion des temps en entreprise. Conçue
              pour remplacer les processus papiers obsolètes, cette application Java
              offre une expérience fluide et sécurisée pour la gestion des demandes
              de congés.
            </p>
            <p>
              Développée avec une rigueur architecturale (MVC, DAO), elle
              garantit une maintenabilité exemplaire et une séparation nette des
              responsabilités, répondant aux standards industriels les plus
              exigeants.
            </p>
          </div>
        </div>
      </section>

      <section class="section">
        <h2>Stack Technique</h2>
        <div class="tech-stack">
          <span>Java 17</span>
          <span>Swing (FlatLaf)</span>
          <span>MySQL 8.0</span>
          <span>MVC Pattern</span>
          <span>DAO Pattern</span>
          <span>BCrypt</span>
        </div>
      </section>

      <section class="section">
        <div class="dual-images">
          <div style="flex: 1;">
            <h2 style="font-size: 3rem; margin-bottom: 2rem;">
              Interface<br />Utilisateur
            </h2>
            <p style="color:#aaa; margin-bottom: 2rem;">
              Une interface graphique soignée utilisant la librairie Swing, avec
              un thème "Purple" cohérent pour une expérience utilisateur
              premium.
            </p>
          </div>
          <img
            src="/portfolio_bpa/images/works/mt-conges-login-screen.png"
            alt="Ecran de Connexion"
            style="flex: 1.5;"
          />
        </div>
      </section>

      <section class="section">
        <h2>Fonctionnalités Clés</h2>
        <div class="feature-grid">
          <div class="card">
            <h3>01. Hiérarchie RBAC</h3>
            <p>
              Système de contrôle d'accès basé sur les rôles (RBAC). Les
              permissions sont strictement cloisonnées entre Employés, Managers
              et Admins.
            </p>
          </div>
          <div class="card">
            <h3>02. Sécurité Core</h3>
            <p>
              Hachage des mots de passe avec BCrypt et prévention des injections
              SQL via l'utilisation systématique de PreparedStatements dans la
              couche DAO.
            </p>
          </div>
          <div class="card">
            <h3>03. Audit Logs</h3>
            <p>
              Traçabilité complète via un système de logging intégré. Chaque
              action critique laisse une empreinte numérique inaltérable pour
              l'audit.
            </p>
          </div>
        </div>
      </section>

      <section class="cta-footer">
        <p
          style="color: #666; margin-bottom: 1rem; text-transform: uppercase; letter-spacing: 0.1em;"
        >
          Code Source
        </p>
        <a
          href="https://github.com/Paul-B-06/mt-conges"
          target="_blank"
          class="main-btn"
        >
          Explorer le Repository
        </a>
      </section>
    </div>
  </main>

  <footer>Designed & Developed by Paul Blanc</footer>

  <script>
    const canvas = document.getElementById('bg-3d')
    const ctx = canvas.getContext('2d')

    let width = (canvas.width = window.innerWidth)
    let height = (canvas.height = window.innerHeight)

    window.addEventListener('resize', () => {
      width = canvas.width = window.innerWidth
      height = canvas.height = window.innerHeight
    })

    const stars = []
    const numStars = 800
    const centerX = width / 2
    const centerY = height / 2

    for (let i = 0; i < numStars; i++) {
      stars.push({
        x: Math.random() * width - centerX,
        y: Math.random() * height - centerY,
        z: Math.random() * width,
      })
    }

    function animate() {
      ctx.fillStyle = '#0b0b0b'
      ctx.fillRect(0, 0, width, height)

      for (let i = 0; i < numStars; i++) {
        const star = stars[i]
        star.z -= 2 // Speed

        if (star.z <= 0) {
          star.x = Math.random() * width - centerX
          star.y = Math.random() * height - centerY
          star.z = width
        }

        const x = (star.x / star.z) * width + centerX
        const y = (star.y / star.z) * height + centerY
        const size = (1 - star.z / width) * 3

        if (x >= 0 && x < width && y >= 0 && y < height) {
          const alpha = 1 - star.z / width
          ctx.fillStyle = 'rgba(255, 255, 255, ' + alpha + ')'
          ctx.beginPath()
          ctx.arc(x, y, size, 0, Math.PI * 2)
          ctx.fill()
        }
      }

      requestAnimationFrame(animate)
    }

    animate()
  </script>


</html>
