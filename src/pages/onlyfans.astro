---
import logo from '../assets/logo.png'
import '../styles/global.scss'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>Polochon | OnlyFans</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/png" href="/icons/favicon-48x48.png" />
    <style>
      :root {
        --of-blue: #00aff0;
        --of-blue-hover: #008cc0;
      }
      body {
        margin: 0;
        padding: 0;
        font-family:
          -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          'Helvetica Neue', Arial, sans-serif;
        background-color: #f1f2f6;
        color: #242529;
        overflow-x: hidden;
      }
      .page-wrapper {
        transition: filter 0.2s;
      }
      .header {
        height: 180px;
        background-color: #f1f2f6;
        background-image: url('https://images.unsplash.com/photo-1550684848-fac1c5b4e853?q=80&w=2670&auto=format&fit=crop'); /* Generic cover */
        background-size: cover;
        background-position: center;
        position: relative;
      }
      .profile-container {
        max-width: 980px;
        margin: 0 auto;
        position: relative;
        padding: 0 1rem;
      }
      .profile-pic {
        width: 140px;
        height: 140px;
        border-radius: 50%;
        border: 3px solid #fff;
        background: #fff;
        position: absolute;
        bottom: -70px;
        left: 20px;
        overflow: hidden;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
      }
      .profile-pic img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .content {
        margin-top: 80px;
        padding: 0 20px;
        max-width: 980px;
        margin-left: auto;
        margin-right: auto;
        display: flex;
        flex-direction: column;
        gap: 20px;
      }
      .name-section {
        display: flex;
        flex-direction: column;
      }
      .name {
        font-size: 22px;
        font-weight: 700;
        margin: 0;
        display: flex;
        align-items: center;
        gap: 5px;
      }
      .verified-icon {
        width: 18px;
        height: 18px;
        fill: var(--of-blue);
      }
      .handle {
        color: #8a96a3;
        font-size: 15px;
        margin: 2px 0 0;
      }
      .last-seen {
        color: #8a96a3;
        font-size: 13px;
        display: flex;
        align-items: center;
        gap: 5px;
        margin-top: 5px;
      }
      .last-seen::before {
        content: '';
        display: block;
        width: 8px;
        height: 8px;
        background: #90ee90;
        border-radius: 50%;
      }
      .bio {
        margin-top: 10px;
        font-size: 15px;
        line-height: 1.5;
        white-space: pre-line;
      }
      .stats {
        display: flex;
        gap: 20px;
        padding-bottom: 5px;
      }
      .stat-item {
        color: #8a96a3;
        font-size: 14px;
      }
      .stat-item strong {
        color: #242529;
        font-weight: 700;
        font-size: 16px;
      }

      .main-grid {
        display: grid;
        grid-template-columns: 2fr 1fr;
        gap: 20px;
      }
      @media (max-width: 768px) {
        .main-grid {
          grid-template-columns: 1fr;
        }
      }

      .post-feed {
        display: flex;
        flex-direction: column;
        gap: 15px;
      }
      .post-card {
        background: #fff;
        border: 1px solid #e5e5e5;
        border-radius: 3px;
        overflow: hidden;
      }
      .post-header {
        padding: 10px 15px;
        display: flex;
        align-items: center;
        gap: 10px;
        border-bottom: 1px solid #f0f0f0;
      }
      .post-avatar {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        overflow: hidden;
      }
      .post-avatar img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
      .post-meta {
        display: flex;
        flex-direction: column;
      }
      .post-name {
        font-weight: 600;
        font-size: 14px;
      }
      .post-time {
        font-size: 12px;
        color: #8a96a3;
      }
      .post-content {
        padding: 50px 20px;
        background: #f8f9fa;
        text-align: center;
        color: #8a96a3;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
      }
      .lock-icon {
        width: 40px;
        height: 40px;
        margin-bottom: 5px;
      }

      .subscription-card {
        background: #fff;
        border: 1px solid #e5e5e5;
        border-radius: 5px;
        padding: 0;
        overflow: hidden;
      }
      .sub-banner {
        background: linear-gradient(90deg, #00aff0 0%, #0088cc 100%);
        padding: 15px;
        color: white;
        text-transform: uppercase;
        font-weight: 700;
        text-align: center;
        letter-spacing: 1px;
      }
      .sub-body {
        padding: 20px;
      }
      .sub-benefits {
        list-style: none;
        padding: 0;
        margin: 0 0 20px 0;
        text-align: left;
      }
      .sub-benefits li {
        margin-bottom: 8px;
        font-size: 14px;
        display: flex;
        align-items: center;
        gap: 8px;
      }
      .sub-benefits li::before {
        content: '‚úì';
        color: var(--of-blue);
        font-weight: bold;
      }
      .btn-subscribe {
        background-color: var(--of-blue);
        color: white;
        border: none;
        width: 100%;
        padding: 12px;
        border-radius: 50px;
        font-weight: 700;
        font-size: 14px;
        cursor: pointer;
        text-transform: uppercase;
        transition: background 0.2s;
        display: block;
        text-decoration: none;
        box-sizing: border-box;
        text-align: center;
      }
      .btn-subscribe:hover {
        background-color: var(--of-blue-hover);
      }

      /* VIRUS STYLES */
      .virus-layer {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 9999;
        display: none;
        pointer-events: none;
        overflow: hidden;
      }
      .virus-active .virus-layer {
        display: block;
        pointer-events: all;
      }
      .virus-active body {
        overflow: hidden;
      }
      .virus-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: black;
        opacity: 0.8;
      }
      .virus-popup {
        position: absolute;
        background: #ece9d8;
        border: 3px solid #0055ea;
        box-shadow: 10px 10px 30px rgba(0, 0, 0, 0.5);
        font-family: 'Tahoma', sans-serif;
        width: 300px;
        animation: popup-bounce 0.2s ease-out;
      }
      .win95-header {
        background: linear-gradient(90deg, #0058ee 0%, #3a93ff 100%);
        padding: 2px 5px;
        color: white;
        font-weight: bold;
        font-size: 12px;
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .win95-close {
        background: #d4d0c8;
        color: black;
        border: 1px solid white;
        border-right-color: #404040;
        border-bottom-color: #404040;
        width: 16px;
        height: 14px;
        line-height: 12px;
        text-align: center;
        font-size: 10px;
        cursor: pointer;
      }
      .win95-content {
        padding: 15px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 10px;
        font-size: 12px;
        color: black;
      }
      .win95-icon {
        width: 32px;
        height: 32px;
      }
      @keyframes glitch-anim {
        0% {
          transform: translate(0);
        }
        20% {
          transform: translate(-5px, 5px);
        }
        40% {
          transform: translate(-5px, -5px);
        }
        60% {
          transform: translate(5px, 5px);
        }
        80% {
          transform: translate(5px, -5px);
        }
        100% {
          transform: translate(0);
        }
      }
      .glitch-mode {
        animation: glitch-anim 0.2s infinite;
        filter: invert(1) contrast(2);
      }

      /* PREVENTION STYLES */
      .prevention-layer {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: 10000;
        background: rgba(16, 16, 16, 0.98);
        display: none;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        color: white;
        text-align: center;
        padding: 2rem;
        font-family: 'Inter', sans-serif;
      }
      .prevention-active .prevention-layer {
        display: flex;
      }
      .prevention-icon {
        font-size: 4rem;
        margin-bottom: 1rem;
      }
      .prevention-title {
        font-size: 2rem;
        margin-bottom: 1rem;
        color: #ff4757;
      }
      .prevention-text {
        font-size: 1.2rem;
        line-height: 1.6;
        max-width: 600px;
        margin-bottom: 2rem;
      }
      .prevention-btn {
        background: white;
        color: black;
        padding: 1rem 2rem;
        border-radius: 5px;
        text-decoration: none;
        font-weight: bold;
        transition: transform 0.2s;
      }
      .prevention-btn:hover {
        transform: scale(1.05);
      }
    </style>
  </head>
  <body>
    <div class="page-wrapper">
      <div class="header">
        <div class="profile-container">
          <div class="profile-pic">
            <img src={logo.src} alt="Polochon" />
          </div>
        </div>
      </div>

      <div class="content">
        <div class="main-grid">
          <div class="left-col">
            <div class="name-section">
              <h1 class="name">
                Polochon <svg class="verified-icon" viewBox="0 0 24 24">
                  <path
                    d="M22.5 12.5c0-1.58-.875-2.95-2.148-3.6.154-.435.238-.905.238-1.4 0-2.21-1.71-3.998-3.818-3.998-.47 0-.92.084-1.336.25C14.818 2.415 13.51 1.5 12 1.5s-2.816.917-3.437 2.25c-.415-.165-.866-.25-1.336-.25-2.11 0-3.818 1.79-3.818 4 0 .495.083.965.238 1.4-1.272.65-2.147 2.02-2.147 3.6 0 1.457.748 2.795 1.84 3.668-.092.35-.153.714-.153 1.082 0 2.21 1.71 3.998 3.818 3.998.47 0 .92-.084 1.336-.25.62 1.334 1.926 2.25 3.437 2.25s2.817-.917 3.437-2.25c.415.165.866.25 1.336.25 2.11 0 3.818-1.79 3.818-4 0-.368-.06-.732-.152-1.082 1.092-.873 1.84-2.21 1.84-3.668zM10.655 16.29l-4.102-4.102 1.565-1.565 2.537 2.538 5.757-5.758 1.565 1.565-7.322 7.322z"
